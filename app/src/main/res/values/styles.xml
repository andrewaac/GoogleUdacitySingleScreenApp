<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/toolbar_title_text</item>
        <item name="android:layout_margin">@dimen/toolbar_title_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ArrowButtonStyle">
        <item name="android:layout_width">@dimen/arrow_width</item>
        <item name="android:layout_margin">@dimen/arrow_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_margin">@dimen/card_margin</item>
    </style>

    <style name="AboutTitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">@dimen/about_text_margin</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="DescriptionTextStyle">
        <item name="android:layout_marginLeft">@dimen/about_text_margin</item>
        <item name="android:layout_marginRight">@dimen/about_text_margin</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SpaceStyle">
        <item name="android:layout_width">@dimen/filler_width</item>
        <item name="android:layout_height">@dimen/filler_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ContactIconStyle">
        <item name="android:layout_width">@dimen/card_icon_width</item>
        <item name="android:layout_height">@dimen/card_icon_height</item>
        <item name="android:padding">@dimen/card_icon_padding</item>
        <item name="android:layout_margin">@dimen/card_icon_layout_margin</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ContactTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/card_text_margin</item>
        <item name="android:layout_marginRight">@dimen/card_text_margin</item>
    </style>

    <style name="BarButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
